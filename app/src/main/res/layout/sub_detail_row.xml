<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#f45"
    android:layout_weight="0.36"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="6dp"
    android:layout_marginBottom="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="#2b193d"
            android:navigationIcon="@menu/menu_main"
            android:id="@+id/tool"
            >
            <TextView
                android:id="@+id/sub"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Subject"
                android:textColor="#0dd"/>
        </android.support.v7.widget.Toolbar>

        <GridLayout
            android:id="@+id/grid"
            android:background="#e8e9f9"
            android:rowCount="9"
            android:columnCount="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:text="Total Attend :"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:textColor="#5d8a79"
                android:layout_marginTop="25dp"
                android:layout_gravity="start"/>


            <TextView
                android:id="@+id/attend"
                android:text="0"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="20sp"
                android:textColor="#5d8a79"
                android:layout_marginTop="25dp"
                android:layout_margin="20dp"
                android:layout_marginLeft="0dp" />


            <TextView
                android:text="Total Bunk   :"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="15dp"
                android:layout_marginTop="70dp"
                android:textSize="20sp"
                android:textColor="#5d8a79"
                android:layout_gravity="start|top"/>

            <TextView
                android:id="@+id/bunk"
                android:text="0"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="top|start"
                android:textSize="20sp"
                android:textColor="#5d8a79"
                android:layout_margin="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="70dp" />

            <TextView
                android:id="@+id/percent"
                android:text="0%"
                android:layout_column="3"
                android:textSize="40sp"
                android:textColor="#5d8a79"
                android:layout_gravity="center_vertical|center_horizontal|end"

                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_row="0" />

            <android.support.v4.widget.Space
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"

                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="8"
                >

                <TextView
                    android:id="@+id/sun1"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="S"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/mon1"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="M"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/tue1"
                     android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="T"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wed1"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="W"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/thu1"
                     android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="T"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fri1"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="F"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sat1"
                     android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:text="S"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </GridLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>